<% layout('layout') -%>
<script>
  requirejs(["/javascripts/designer.js"]);
</script>

<div class="container clearfix">
	<div class="toggle clearfix">
		<button class="btn-std btn-toggle build">Build</button>
		<button class="btn-std btn-toggle play">Play</button>
	</div>
	<button class="btn-std btn-md publish btn-critical">Publish</button>

	<div class="tray">
		<h5 class="left">Components</h5>
		<div class="library-list clearfix">

		</div>
	</div>
	<div class="phone-container">
		<div class="phone-top"></div>
		<div class="phone-canvas">

		</div>
		<div class="phone-bottom"></div>
	</div>
	<div class="cards">
		<div class="clearfix">
			<h5 class="left">Cards</h5>
			<button class="btn-add"></button>
		</div>
		<div class="card"></div>
	</div>
	<div class="console">
		<div class="log">
			<div class="inner">
				<h5>Log</h5>
				<p class="scroll"></p>
			</div>
		</div>
		<div class="inspector" class="hidden">
			<div class="inner">
				<h4 class="name"></h4>
				<div class="description">This is where the app description should be.</div>
				<div class="label">BROADCASTS</div>
				<div class="broadcast-channel channel-label"></div>
				<div class="broadcast-options clearfix"></div>
				<div class="label">LISTENS</div>
				<div class="listen-channel channel-label"></div>
				<div class="listen-options clearfix"></div>
				<div class="label">ATTRIBUTES</div>
				<div class="editables"></div>
			</div>
		</div>
	</div>
</div>
